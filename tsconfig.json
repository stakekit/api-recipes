{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./lib",
    "rootDir": "./",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "lib": ["ES2020"],
    "sourceMap": true,
    "declaration": true
  },
  "include": ["recipes/**/*", "utils/**/*"],
  "exclude": ["node_modules", "lib"]
}
